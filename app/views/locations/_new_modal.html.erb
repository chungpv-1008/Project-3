<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="newModalLabel">New location</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>
    <div class="modal-body">
      <%= form_for @location, remote: true do |f| %>
        <div class="form-group">
          <%= f.label "Content", for: "content"%>
          <%= f.text_field :content, class: "form-control", id: "content" %>
          <%= f.hidden_field :coordinate, value: @location.coordinate %>
          <%= f.hidden_field :image_id, value: @location.image_id %>
        </div>
        <%= f.submit "Submit", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
