<%= provide :title, t(".title") %>
<div class="row w-100 mt-5">
  <h2 class="w-100 text-center"><%= t ".title" %>
</div>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for @user do |f| %>
      <div class="form-group">
        <%= f.label t(".email"), for: :email %>
        <%= f.email_field :email, class: "form-control", id: :email, readonly: :true %>
        <small id="emailHelp" class="form-text text-muted"><%= t ".private_email" %></small>
      </div>
      <div class="form-group">
        <%= f.label t(".name"), for: :name %>
        <%= f.text_field :name, class: "form-control", id: :name, readonly: :true %>
      </div>
      <div class="form-group">
        <%= f.label t(".role"), for: "role" %>
        <%= f.select :role, options_for_select(arr_user_roles, role_user(@user)),
          {}, class: "custom-select my-1 mr-sm-2", id: "role", disabled: :true %>
      </div>
    <% end %>
    <div class="col-md-12 d-flex justify-content-around">
      <%= link_to t(".edit_profile"), profile_edit_path, class: "btn btn-primary" %>
      <%= link_to t(".change_password"), new_user_password_path, class: "btn btn-primary" %>
    </div>
  </div>
  <div class="col-md-3"></div>
</div>
