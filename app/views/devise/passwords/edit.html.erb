<%= provide :title, t(".title") %>
<div class="row d-block mt-5 w-100 text-center">
  <h2><%= t ".title" %></h2>
</div>
<div class="row mt-5 mb-5">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.label t(".password"), for: :password %><br />
        <%= f.password_field :password, class: "form-control", id: :password, autofocus: true, autocomplete: "new-password" %>
      </div>

      <div class="form-group">
        <%= f.label t(".password_confirmation"), for: :password_confirmation %><br />
        <%= f.password_field :password_confirmation, class: "form-control", id: :password_confirmation, autofocus: true, autocomplete: "new-password" %>
      </div>
      <%= f.submit t(".submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="col-md-3"></div>
</div>
