<% if object.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
       <%= t ".the_form" %>
       <%= t ".count", count: object.errors.size %>.
    </div>
    <ul>
      <% object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
